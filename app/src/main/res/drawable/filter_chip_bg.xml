<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the chip is checked -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#D0E4FF" /> <!-- Color when checked -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0" /> <!-- Default color -->
            <stroke android:width="1dp" android:color="#79747E" /> <!-- Optional border -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
